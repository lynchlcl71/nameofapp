<div class="container product">

  <div class="row" data-product-id="<%= @product.id %>">

    <p id="notice"><%= notice %></p>

    <% cache @product do %>

    <div class="col-md-3">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
    </div>

    <div class="col-md-12">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>

    <div class="col-md-12">
      <p>
        <strong>Colour:</strong>
        <%= @product.colour %>
      </p>
    </div>

      <p>
        <strong></strong>
        <%= image_tag(@product.image_url, width: "250", class: "img-zoom", data_zoom_image: @product.image_url) %>
      </p>

    <div class="col-md-12">
      <p>
        <strong>Price:</strong>
        <%= @product.price %> 
      </p>
    </div>

      <div class="text-center">
        <%= form_tag "/payments/create" do %>
          <%= hidden_field_tag(:product_id, @product_id) %>
          <%= render partial: "shared/stripe_checkout_button" %>
        <% end %><br>

        <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %><br>
      </div>

      <p>
        <strong>Average Rating:</strong>
        <div class="rated" id="#average-rating" data-score="<%= @product.average_rating %>">
        </div>
      </p>

    <% end %>

    </div>

    <%= render partial: "new_comment" %>

    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>

    <%= render partial: "comments" %>

    <div class="apple_pagination">
    <%= will_paginate @comments %>
    </div>
    <br>
    <br>

</div>






